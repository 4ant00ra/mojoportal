CREATE PROCEDURE [dbo].[i7_sflexi_values_SelectByItemGuids]

-- Author:   			i7MEDIA
-- Created: 			2017-11-03
-- Last Modified: 		2017-11-03

@ItemGuids guid_list_tbltype READONLY

AS


SELECT
[ValueGuid],
[SiteGuid],
[FeatureGuid],
[ModuleGuid],
[ItemGuid],
[FieldGuid],
[FieldValue]
FROM
[dbo].[i7_sflexi_values]
WHERE
[ItemGuid] In (SELECT n from @ItemGuids)

