CREATE TABLE `i7_sflexi_fields` (
`SiteGuid` varchar(36) NOT NULL,
`FeatureGuid` varchar(36) NOT NULL,
`DefinitionGuid` varchar(36) NOT NULL,
`FieldGuid` varchar(36) NOT NULL,
`DefinitionName` varchar(50) DEFAULT NULL,
`Name` varchar(50) DEFAULT NULL,
`Label` varchar(255) DEFAULT NULL,
`DefaultValue` text,
`ControlType` varchar(16) DEFAULT NULL,
`ControlSrc` text,
`SortOrder` int(11) DEFAULT NULL,
`HelpKey` varchar(255) DEFAULT NULL,
`Required` tinyint(1) DEFAULT NULL,
`RequiredMessageFormat` text,
`Regex` text,
`RegexMessageFormat` text NOT NULL,
`Token` varchar(50) DEFAULT NULL,
`Searchable` tinyint(1) DEFAULT NULL,
`EditPageControlWrapperCssClass` varchar(50) DEFAULT NULL,
`EditPageLabelCssClass` varchar(50) DEFAULT NULL,
`EditPageControlCssClass` varchar(50) DEFAULT NULL,
`DatePickerIncludeTimeForDate` tinyint(1) DEFAULT NULL,
`DatePickerShowMonthList` tinyint(1) DEFAULT NULL,
`DatePickerShowYearList` tinyint(1) DEFAULT NULL,
`DatePickerYearRange` varchar(10) DEFAULT NULL,
`ImageBrowserEmptyUrl` text,
`Options` text,
`CheckBoxReturnBool` tinyint(1) DEFAULT NULL,
`CheckBoxReturnValueWhenTrue` text,
`CheckBoxReturnValueWhenFalse` text,
`DateFormat` text,
`TextBoxMode` varchar(25) DEFAULT NULL,
`Attributes` longtext,
`IsDeleted` tinyint(1) DEFAULT '0',
PRIMARY KEY (`FieldGuid`),
UNIQUE KEY `SiteGuid` (`SiteGuid`),
UNIQUE KEY `FeatureGuid` (`FeatureGuid`),
UNIQUE KEY `DefinitionGuid` (`DefinitionGuid`),
UNIQUE KEY `FieldGuid` (`FieldGuid`)
) ENGINE=InnoDB DEFAULT CHARSET=latin1;

