CREATE PROCEDURE [dbo].[mp_SiteHost_Exists]

/*
Created:		09/11/2017
Last Modified:	09/11/2017

*/
    
@HostName	nvarchar(255)

AS

IF EXISTS (	SELECT  HostID
		FROM		mp_SiteHosts
		WHERE		HostName = @HostName )
SELECT 1
ELSE
SELECT 0
GO

